<main class="container">
  <div class="row">
    <div class="card col-12 col-md-8 col-lg-6 offset-md-2 offset-lg-3 my-4">
      <h1 class="card-title my-3 text-center">Contacto</h1>
      <div class="card-body row">
        <div class="form-floating mb-3 col-12 col-md-6">
          <input type="text" id="name" class="form-control" name="name" placeholder="Nombre">
          <label for="name" class="form-label fw-normal ps-4">
            Nombre
          </label>
        </div>
        <div class="form-floating mb-3 col-12 col-md-6">
          <input type="text" id="surname" class="form-control" name="surname" placeholder="Apellido">
          <label for="surname" class="form-label fw-normal ps-4">
            Apellido
          </label>
        </div>
        <div class="form-floating mb-3 col-12 col-md-6">
          <input type="email" id="surname" class="form-control" name="email" placeholder="Email">
          <label for="email" class="form-label fw-normal ps-4">
            Email
          </label>
        </div>
        <div class="form-floating mb-3 col-12 col-md-6">
          <input type="number" id="phone" class="form-control" name="phone" placeholder="Teléfono">
          <label for="phone" class="form-label fw-normal ps-4">
            Teléfono
          </label>
        </div>
        <div class="form-floating mb-3">
          <textarea type="text" class="form-control" name="message" id="message" style="height: 150px;width:100%;resize: none;" placeholder="Mensaje"></textarea>
          <label for="message" class="form-label fw-normal ps-4">
            Mensaje
          </label>
        </div>
  
        <!-- RECAPTCHA DE GOOGLE -->
        <script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async>
        </script>
  
        <div class="form-group mb-3">
          <div class="g-recaptcha" id="ReCaptcha"></div>
            <style>
              .g-recaptcha > div {
                margin-left: auto;
              }
            </style>
        </div>
  
        <div class="form-group mb-3 text-end">
          <button class="btn btn-primary" type="submit">Enviar</button>
        </div>
  
      </div>
    </div>
  </div>
</main>
<script src="/javascript/reCaptcha.config.js"></script>